#include <bits/stdc++.h>
#include <string> 
#include <fstream>
#include <iostream>
using namespace std;

void merge(vector<pair<string,int>> &lista, int inicio, int meio, int fim){
    vector<pair<string,int>> aux;
    int left=inicio,right=meio+1;
    while(left<=meio && right<=fim){
        if(lista[left].second <= lista[right].second){
            aux.push_back(lista[left]);
            left++;
        }
        else{
            aux.push_back(lista[right]);
            right++;
        }
    }
    while(left<=meio){
        aux.push_back(lista[left]);
        left++;
    }
    while(right<=fim){
        aux.push_back(lista[right]);
        right++;
    }
    for(int i=inicio; i<=fim; i++){
        lista[i]=aux[i-inicio];
    }
}
void MergeSort(vector<pair<string,int>> &lista, int inicio, int fim){
    if(fim>inicio){
        int meio=(inicio+fim)/2;
        MergeSort(lista, inicio, meio);
        MergeSort(lista, meio+1, fim);
        merge(lista, inicio, meio, fim);
    }
}

void BubbleSort(vector<pair<string,int>> &lista, int tam){
	for(int fim=tam-1; fim>0; fim--){
		for(int i=0; i<fim; i++){
			if(lista[i].first>lista[i+1].first){
				pair<string,int>aux=lista[i];
				lista[i]=lista[i+1];
				lista[i+1]=aux;
			}
		}
	}
}

void imprimi(vector<pair<string,int>>&lista){
	for(int i=0; i<(int)lista.size(); i++){
		cout<<lista[i].first<<" - Nota: "<<lista[i].second<<endl;
	}
}

int main ()
{
	vector<pair<string,int>> lista={{"Fortnite",8},{"League of Legends",9},{"CrossFire",6}, {"Roblox",7}, {"Minecraft",8}};
	
	cout<<"Vetor Original:"<<endl;
	imprimi(lista);
	cout<<endl<<endl;
	cout<<"Vetor Ordenado: Alfabetica"<<endl;
	BubbleSort(lista, lista.size());
	imprimi(lista);
	cout<<endl<<endl;
	cout<<"Vetor Ordenado: Numerica"<<endl;
	MergeSort(lista, 0, lista.size()-1);
	imprimi(lista);
	cout<<"++++++++++++++++++++++++++++++++++++++++++++++++++++++++"<<endl;
	cout<<"Digite o nome do jogo:"<<endl;
	string nome;
	getline(cin, nome);
	int nota;
	for(int i=0; i<(int)lista.size() and nome!=lista[i].first; i++){
	    nome+=" ";
		if(i<(int)lista.size()){
			cout<<"Digite a sua nota: ";
			cin>>nota;
			cout<<"second "<<lista[i].second<<endl;
			nota=nota+lista[i].second;
			//cout<<"nota: "<<nota<<endl;
			cout<<"second "<<lista[i].second<<endl;
			lista.erase(lista.begin()+i);
			lista.push_back({nome, nota/2});
		}
	}
	cout<<endl<<endl;
	MergeSort(lista, 0, lista.size()-1);
	imprimi(lista);
}
